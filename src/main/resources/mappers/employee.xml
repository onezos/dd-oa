<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--namespace与包名一致-->
<mapper namespace="com.ddnotes.oa.dao.EmployeeDao">
    <!--id与方法名对应
    parameterType与方法参数类型对应
    resultType与方法返回类型对应
     -->
    <select id="selectById" parameterType="Long" resultType="com.ddnotes.oa.entity.Employee">
        select * from adm_employee where employee_id = #{value}
    </select>
    
    <select id="selectLeader" parameterType="com.ddnotes.oa.entity.Employee" resultType="com.ddnotes.oa.entity.Employee">
        select * from adm_employee
        where
        <if test="emp.level &lt; 7">
            level = 7 and department_id = #{emp.departmentId}
        </if>
        <if test="emp.level == 7">
            level = 8
        </if>
        <if test="emp.level == 8">
            employee_id = #{emp.employeeId}
        </if>
    </select>

</mapper>