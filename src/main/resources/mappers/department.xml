<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--namespace与包名一致-->
<mapper namespace="com.ddnotes.oa.dao.DepartmentDao">
    <!--id与方法名对应
    parameterType与方法参数类型对应
    resultType与方法返回类型对应
     -->
    <select id="selectById" parameterType="Long" resultType="com.ddnotes.oa.entity.Department">
        select * from adm_department where department_id = #{value}
    </select>
</mapper>